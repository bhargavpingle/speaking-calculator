<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="300" prefWidth="400" spacing="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CalcViewController">

	<!-- <fx:define> <Font fx:id="Font" size="18" /> </fx:define> -->
	
	
	
	<StackPane alignment="CENTER">
		<children>
			<Text fx:id="output">
            <font>
               <Font size="45.0" />
            </font></Text>
      			<Rectangle fill="TRANSPARENT" height="80.0" stroke="#280808" strokeWidth="5.0" width="300.0">
            <StackPane.margin>
               <Insets bottom="10.0" top="15.0" />
            </StackPane.margin>
         </Rectangle>
		</children>
      <VBox.margin>
         <Insets top="30.0" />
      </VBox.margin>
	</StackPane>

	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button onAction="#clearOperator" prefWidth="50" text="C" />
			<Button onAction="#backOperator" prefWidth="150" text="DEL" />
			<!-- <Button onAction="#plusOrMinusOperator" prefWidth="50" text="+/-" /> -->
			<Button onAction="#userInput" prefWidth="50" text="^" />
		</children>
	</HBox>
	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button onAction="#userInput" prefWidth="50" text="9" />
			<Button onAction="#userInput" prefWidth="50" text="8" />
			<Button onAction="#userInput" prefWidth="50" text="7" />
			<Button onAction="#userInput" prefWidth="50" text="/" />
		</children>
	</HBox>
	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button onAction="#userInput" prefWidth="50" text="6" />
			<Button onAction="#userInput" prefWidth="50" text="5" />
			<Button onAction="#userInput" prefWidth="50" text="4" />
			<Button onAction="#userInput" prefWidth="50" text="*" />
		</children>
	</HBox>
	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button onAction="#userInput" prefWidth="50" text="3" />
			<Button onAction="#userInput" prefWidth="50" text="2" />
			<Button onAction="#userInput" prefWidth="50" text="1" />
			<Button onAction="#userInput" prefWidth="50" text="-" />
		</children>
	</HBox>
	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button onAction="#userInput" prefWidth="50" text="0" />
			<Button onAction="#userInput" prefWidth="50" text="." />
			<Button onAction="#userInput" prefWidth="50" text="+" />
			<Button onAction="#equals" prefWidth="50" text="=" />
		</children>
	</HBox>
	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button onAction="#userInput" prefWidth="50" text="(" />
			<Button onAction="#userInput" prefWidth="50" text=")" />	
		</children>
	</HBox>
	<HBox alignment="CENTER" spacing="10">
		<Button onAction="#speechMode" prefWidth="200" text="Speech Mode" />
	</HBox>
	<HBox></HBox>
</VBox>
